<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="false"
	android:orientation="horizontal">

	<!-- Keeping as this class for compatibility with other layout -->

	<com.nononsenseapps.ui.TitleNoteTextView
		android:id="@android:id/text1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:fontFamily="sans-serif-light"
		android:paddingLeft="16dp"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="?android:attr/textColorPrimary"
		android:textIsSelectable="false"
		custom:titleFontFamily="robotolight"/>

	<!-- Needed to support the same cursor as items . All hidden -->

	<TextView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"/>

	<com.nononsenseapps.ui.NoteCheckBox
		android:id="@+id/checkbox"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"/>

	<com.nononsenseapps.ui.DateView
		android:id="@+id/date"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"/>

	<View
		android:id="@+id/dragpadding"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"/>

	<View
		android:id="@+id/drag_handle"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"/>

</LinearLayout>