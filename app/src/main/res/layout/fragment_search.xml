<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="?attr/ListMarginStyle"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:fitsSystemWindows="true">

	<!-- Layout file for the "archive" activity of deleted notes. Shows a list of those.
	 See FragmentSearchDeleted, which decides what gets shown in the listitem -->

	<ListView
		android:id="@android:id/list"
		style="?attr/ListDividerStyle"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginVertical="4dp"
		android:drawSelectorOnTop="true"
		tools:listitem="@layout/tasklist_item_rich">
		<!-- every height is "match_parent" because the ListView can show the scrollbar by itself -->
	</ListView>

</LinearLayout>