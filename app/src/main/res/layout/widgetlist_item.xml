<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:minHeight="@dimen/widget_item_min_size"
	android:orientation="horizontal"
	android:paddingRight="12dp"
	tools:ignore="HardcodedText">

	<RelativeLayout
		android:id="@+id/widget_item"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|left"
		android:background="@drawable/img_default_selector_dark"
		android:gravity="center_vertical"
		android:paddingLeft="16dp">

		<LinearLayout
			android:id="@+id/itemSpacer"
			android:layout_width="20dp"
			android:layout_height="1dp"
			android:layout_alignParentLeft="true"
			android:orientation="vertical"
			android:visibility="visible"/>

		<TextView
			android:id="@android:id/text1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignWithParentIfMissing="true"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/dueDate"
			android:layout_toRightOf="@id/itemSpacer"
			android:gravity="center_vertical"
			android:maxLines="2"
			android:paddingTop="2dp"
			android:paddingRight="4dp"
			android:paddingBottom="2dp"
			android:text="a title  see very plainly with a second line like so which should be too long ideally"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@android:color/primary_text_dark"
			android:textStyle="normal"/>

		<TextView
			android:id="@+id/dueDate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:fontFamily="sans-serif-light"
			android:gravity="center_vertical"
			android:text="12 mar"
			android:textColor="@android:color/primary_text_dark"
			android:textSize="12sp"/>
	</RelativeLayout>

	<!-- The following is the implementation of checkboxes. You can't use actual checkboxes
	as widgets (see https://developer.android.com/reference/android/widget/RemoteViews ) so
	you have to use ImageButton instead. There are 2, to support theme switching.
	You Can't change image src through RemoteViews -->

	<ImageButton
		android:id="@+id/completedCheckBoxDark"
		android:layout_width="48dp"
		android:layout_height="@dimen/widget_item_min_size"
		android:layout_gravity="center_vertical|left"
		android:background="@null"
		android:contentDescription="Complete task"
		android:padding="5dp"
		android:scaleType="fitStart"
		android:src="@drawable/ic_checkbox_unchecked"/>

	<ImageButton
		android:id="@+id/completedCheckBoxLight"
		android:layout_width="48dp"
		android:layout_height="@dimen/widget_item_min_size"
		android:layout_gravity="center_vertical|left"
		android:background="@null"
		android:contentDescription="Complete task"
		android:padding="5dp"
		android:scaleType="fitStart"
		android:src="@drawable/ic_checkbox_unchecked"
		android:visibility="gone"/>

	<!-- TODO remove the 2Â° imagebutton. now they're basically clones with != names -->

</FrameLayout>