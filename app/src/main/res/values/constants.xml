	<!-- Date formats. "localtime" is replaced at runtime with 12/24 hour clock.
	 They're hardcoded and untranslatable because if translators make mistakes,
	 the app will crash at runtime, and I won't check those strings on every pull request.
	 In "Friday 12:59 AM, 27 april", you have:
	  E = "Fri", MMM = "Apr", d = dd = "27", localtime = "12:59 AM",
	  EEEE = "Friday", MMMM = "April", MM = 04
	-->
	<string name="dateformat_weekday">EEEE</string>
	<!-- for the date in a reminder item in the task detail page -->
	<string name="dateformat_just_date">MMMM d</string>
	<!-- for the big widget -->
	<string name="dateformat_micro">MMM d</string>

	<!-- short date formats, for the note item in the list. Used in arrays.xml -->
	<string name="dateformat_short_1">E localtime, d MMM</string>
	<string name="dateformat_short_2">E, d MMM</string>
	<string name="dateformat_short_3">MMM d</string>
	<string name="dateformat_short_4">E, localtime</string>
	<string name="dateformat_short_5">d MMM</string>
	<string name="dateformat_short_6">MM/dd (E)</string>
	<string name="dateformat_short_7">MM/dd</string>

	<!-- long date formats, for the spinner in detailed view. Used in arrays.xml -->
	<string name="dateformat_long_1">EEEE localtime, MMMM d</string>
	<string name="dateformat_long_2">E localtime, MMM d</string>
	<string name="dateformat_long_3">EEEE d MMMM</string>
	<string name="dateformat_long_4">E d MMM</string>

